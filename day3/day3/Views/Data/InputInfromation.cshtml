
@{
    ViewBag.Title = "InputInfromation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InputInfromation", "Data"))
{
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">First Name</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="firstName">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Last Name</label>
            <input type="text" class="form-control" id="exampleInputPassword1" name="lastName">
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


    <br />
    <br />

    <div>
        <h2>Email: @ViewBag.Email</h2>

        <h2>Password: @ViewBag.Password</h2>

        <h2>First Name: @ViewBag.FirstName </h2>

        <h2>Last Name: @ViewBag.LasttName</h2>


    </div>
}