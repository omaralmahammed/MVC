
@{
    ViewBag.Title = "ourCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container mt-5">
        <h2>Our Courses</h2>
        <div class="row">
            <!-- Course 1 -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Course 1 Image">
