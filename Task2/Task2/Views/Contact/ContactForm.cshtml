
@{
    ViewBag.Title = "ContactForm";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}

@using (Html.BeginForm("ShowForm", "Contact"))
{       <h1 class="mx-auto my-4 text-center">Please Inter Your Information</h1>
        <main class="border mx-auto my-4 px-3 py-3" px style="width: 600px; height:95%">
            <div class="form-group">
                <label for="exampleFormControlInput1">Name:</label>
                <input type="text" class="form-control" name="name">
            </div><br />

            <div class="form-group">
                <label for="exampleFormControlInput2">ID:</label>
                <input type="number" class="form-control" name="id">
            </div><br />

            <div class="form-group">
                <label>Gender: &nbsp;</label>
                <input type="radio" name="gender" value="male">
                <label>Male</label>
                <input type="radio" name="gender" value="female">
                <label>Female</label>
            </div><br />

            <div>
                <label>Groups: &nbsp;</label>
                <select data-mdb-select-init class="select" name="group">
                    <option name="group" value="Group One">Group One</option>
                    <option name="group" value="Group Two">Group Two</option>
                    <option name="group" value="Group Three">Group Three</option>
                </select>
            </div><br />

            <div>
                <label>Paths:</label><br />
                <input type="checkbox" id="vehicle1" name="path" value="Front End Path">
                <label for="vehicle1"> Front End Path</label><br>
                <input type="checkbox" id="vehicle2" name="path" value="Back End Path">
                <label for="vehicle2"> Back End Path</label><br>
                <input type="checkbox" id="vehicle3" name="path" value="SQL Server Path">
                <label for="vehicle3"> SQL Server Path</label><br>
                <input type="checkbox" id="vehicle3" name="path" value="Oracle Path">
                <label for="vehicle3"> Oracle Path</label><br>
            </div>
            <br><br>

            <button data-mdb-ripple-init type="submit" class="btn btn-primary">Submit</button>
        </main>
}