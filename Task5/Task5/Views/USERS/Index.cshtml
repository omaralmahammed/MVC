@model IEnumerable<Task5.Models.USER>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@Url.Content(item.image)" alt="Card image cap" class="card-img-top" width="200" height="150" />
                    <div class="card-body">
                        <span>Name:</span>@Html.DisplayFor(modelItem => item.name, new { @class = "card-title" }) <br />

                        <span>Email:</span>@Html.DisplayFor(modelItem => item.email, new { @class = "card-text" }) <br /><br />

                        @Html.ActionLink("Edit", "Edit", new { id = item.user_id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", new { id = item.user_id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.user_id }, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>


